<Window x:Class="Pokemon2.SelectedPokemonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pokemon2"
        mc:Ignorable="d"
        Title="SelectedPokemonWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="NameBox" HorizontalAlignment="Left" Margin="351,32,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="HeightBox" HorizontalAlignment="Left" Margin="128,105,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="WeightBox" HorizontalAlignment="Left" Margin="596,105,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Image x:Name="PokemonImage" HorizontalAlignment="Left" Height="216" Margin="153,176,0,0" VerticalAlignment="Top" Width="270"/>
        <Button x:Name="ChangeSprite" Content="Change to back sprite" HorizontalAlignment="Left" Margin="553,264,0,0" VerticalAlignment="Top" Height="67" Width="162" Click="ChangeSprite_Click"/>

    </Grid>
</Window>
