<Window x:Class="Pokemon.SelectedPokemonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pokemon"
        mc:Ignorable="d"
        Title="SelectedPokemonWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="HeightBox" HorizontalAlignment="Left" Margin="106,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="111"/>
        <TextBlock x:Name="WeightBox" HorizontalAlignment="Left" Margin="470,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="111" RenderTransformOrigin="0.607,0.616"/>
        <TextBlock x:Name="NameBox" HorizontalAlignment="Left" Margin="336,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Image x:Name="ImagePokemon" HorizontalAlignment="Left" Height="160" Margin="121,230,0,0" VerticalAlignment="Top" Width="218"/>
        <Button x:Name="ChangeSprite" Content="" HorizontalAlignment="Left" Margin="564,279,0,0" VerticalAlignment="Top" Height="73" Width="115" Click="ChangeSprite_Click"/>
    </Grid>
</Window>
